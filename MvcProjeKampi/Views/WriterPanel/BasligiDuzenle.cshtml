@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "BasligiDuzenle";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@using (Html.BeginForm("BasligiDuzenle", "WriterPanel", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.HeadingID)
        @Html.HiddenFor(x => x.WriterID)
        @Html.HiddenFor(x => x.HeadingDate)
        @Html.Label("Başlık Adı: ")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        <br />
        @Html.Label("Kategori: ")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.categoryvalue, new { @class = "form-control" })
        <br />
        <button class="btn btn-primary" formmethod="post">Güncelle</button>
    </div>
}

